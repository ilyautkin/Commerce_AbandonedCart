        <aggregate alias="User" class="AbandonedCartUser" local="user" foreign="id" cardinality="one" owner="foreign" />
        <aggregate alias="Order" class="comOrder" local="order" foreign="id" cardinality="one" owner="foreign" />
    </object>
</model>